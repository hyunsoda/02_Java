package com.kh.variable.practice2;

import java.util.Scanner;

public class Practice3 {
	public void ex2() {
		Scanner sc = new Scanner(System.in);
		
		System.out.print("국어 :");
		double sub1 = sc.nextDouble();
		
		System.out.print("영어 :");
		double sub2 = sc.nextDouble();
		
		System.out.print("수학 :");
		double sub3 = sc.nextDouble();
		
	
		System.out.print("총점 :");
		System.out.printf(" %d\n",(int)(sub1+sub2+sub3));
		
		System.out.print("평균 :");
		System.out.printf("%d\n",(int)(sub1+sub2+sub3)/3);
		}
}
